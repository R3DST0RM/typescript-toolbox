{
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "collectCoverageFrom": [
      "!src/index.ts",
      "src/**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/lib/**"
    ]
  }